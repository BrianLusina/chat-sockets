{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "build",
      "baseUrl": "./server",
      "paths": {
        "*": [
          "node_modules/*",
          "types/*"
        ]
      }
    },
    "include": [
      "server/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }